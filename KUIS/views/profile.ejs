      <textarea id="deskripsi" rows="4" placeholder="Deskripsi" required> </textarea>
      <button onclick="tambahInformasi()">Tambah</button>
    </div>

    <div class="info-container" id="informasi-terbaru">
      <h3>Informasi Terbaru</h3>
      <ul id="daftar-informasi"></ul>
    </div>
