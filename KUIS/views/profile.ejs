  <script>
    const informasiList = [];

    function tambahInformasi() {
      const judul = document.getElementById('judul').value;
      const deskripsi = document.getElementById('deskripsi').value;

      if (judul && deskripsi) {
        informasiList.push({ judul, deskripsi });
        document.getElementById('judul').value = '';
        document.getElementById('deskripsi').value = '';
        tampilkanInformasi();
      } else {
        alert('Silakan lengkapi semua field.');
      }
    }

    function tampilkanInformasi() {
      const daftarInformasi = document.getElementById('daftar-informasi');
      daftarInformasi.innerHTML = '';

      informasiList.forEach((info, index) => {
        const li = document.createElement('li');
        li.innerHTML = `<strong>${info.judul}</strong>: ${info.deskripsi} 
                        <button onclick="hapusInformasi(${index})">Hapus</button>`;
        daftarInformasi.appendChild(li);
      });
    }

    function hapusInformasi(index) {
      informasiList.splice(index, 1);
      tampilkanInformasi();
    }

    function logout() {
    // Logika untuk proses logout
    alert("Anda telah berhasil logout.");
    window.location.href = "/auth/logout";  // Arahkan ke halaman logout server
  }
  </script>

